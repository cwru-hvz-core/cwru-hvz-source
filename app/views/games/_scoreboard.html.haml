%div.player{ class: faction_id_to_class(player) }
  %ul
    %li.number
      #{number}.
    %li.picture.right
      = image_tag profile_photo_url(player.person, 32)
    %li.name.right{ class: ("admin" if player.person.try(:is_admin?)) }
      = player.person.try(:name) || 'Unknown Player'
      - if player.is_oz? && player.game.ozs_revealed?
        (OZ)
    %li.survival.right
      = get_scoreboard_text(player).html_safe
    %li.points.right
      %span.highlight= player.display_score
      Pts
